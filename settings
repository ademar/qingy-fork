# A test window
window
{
	# window geometry
	x       = 1000
	y       = 20
	width   = 200
	height  = 30

	# update time, 0 means do not update
	time    = 0

	# window type, allowed values are:
	# "label", "button", "login", "password", "combo"
	type    = "label"

	# In this case: what text do you want to display?
	content = "pippo"
}
